<?xml version='1.0' encoding='utf-8'?>
<widget id="com.jayleth.jays-to-do-list" ios-CFBundleVersion="1.0.0" version="1.0.0" versionCode="1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Camera">
        <param name="browser-package" value="Camera" />
    </feature>
    <feature name="Device">
        <param name="browser-package" value="Device" />
    </feature>
    <feature name="BarcodeScanner">
        <param name="browser-package" value="BarcodeScanner" />
    </feature>
    <name>To-do-list</name>
    <description>
        A application to enable users to create a "to-do" list.  A "todo" item will have a title, decriptiom, status
        and optional related image.  This application will also perform the following functions;

             1.   Ability to add, edit, and delete a item
             2.   Ability to take a photograph and associate it with the item
             3.   Display a list of incomplete items, ordered by date added
             4.   Mark an item as completed and move to a completed list
             5.   Navigate between incomplete and completed lists
             6.   Send a list of incomplete items to an email address
             7.   Retain the list of items in local storage between sessions
    </description>
    <author email="jay.letheby@gmail.com" href="http://jayleth72.github.io">
        Jay Letheby
    </author>
    <access origin="*" subdomains="true" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="Fullscreen" value="false" />
    <preference name="Orientation" value="portrait" />
    <preference name="BackupWebStorage" value="none" />
    <preference name="deployment-target" value="7.0" />
    <preference name="target-device" value="universal" />
    <preference name="prerendered-icon" value="false" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#000000" />
    <preference name="StatusBarStyle" value="lightcontent" />
    <preference name="android-minSdkVersion" value="18" />
    <preference name="android-installLocation" value="auto" />
</widget>
